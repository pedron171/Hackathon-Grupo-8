{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "NodeNext",                     
    "moduleResolution": "NodeNext",           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "strict": true,                           
    "skipLibCheck": true,                     
    "resolveJsonModule": true,                
    "outDir": "dist",                         
    "baseUrl": ".",                           
    "rootDir": "./"                           
  },
  "include": ["src", "knexfile.ts", "migrations"],
  "exclude": ["node_modules"]
}
